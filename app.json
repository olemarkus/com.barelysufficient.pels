  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Capacity guard: manual action needed"
        },
        "titleFormatted": {
          "en": "Capacity guard cannot reduce load to the limit; manual action required"
        },
        "args": [],
        "hint": {
          "en": "Triggers when PELS cannot shed enough devices to stay within your hourly power capacity limit (hard cap). This is an emergency situation requiring immediate manual intervention. Note: This only triggers for hourly capacity limit violations, never for daily budget constraints (which are soft limits)."
        },
        "id": "capacity_shortfall"
      },
      {
        "title": {
          "en": "Operating mode changed to"
        },
        "titleFormatted": {
          "en": "Operating mode changed to [[mode]]"
        },
        "args": [
          {
            "name": "mode",
            "type": "autocomplete",
            "title": {
              "en": "Operating mode"
            },
            "placeholder": {
              "en": "Select a mode"
            },
            "example": {
              "en": "Home"
            }
          }
        ],
        "hint": {
          "en": "Use this to trigger flows when PELS switches to a different operating mode."
        },
        "id": "operating_mode_changed"
      },
      {
        "title": {
          "en": "Price level changed to"
        },
        "titleFormatted": {
          "en": "Price level changed to [[level]]"
        },
        "args": [
          {
            "name": "level",
            "type": "autocomplete",
            "title": {
              "en": "Price level"
            },
            "placeholder": {
              "en": "Choose a price level"
            },
            "example": {
              "en": "Cheap"
            }
          }
        ],
        "id": "price_level_changed"
      }
    ],
    "conditions": [
      {
        "title": {
          "en": "Is there enough capacity?"
        },
        "titleFormatted": {
          "en": "Is there enough capacity for [[required_kw]] kW?"
        },
        "args": [
          {
            "name": "required_kw",
            "type": "number",
            "title": {
              "en": "Required power (kW)"
            },
            "min": 0,
            "step": 0.1
          }
        ],
        "hint": {
          "en": "Use this to check if you can safely turn on more devices without exceeding your capacity limit."
        },
        "id": "has_capacity_for"
      },
      {
        "title": {
          "en": "Is there headroom for device?"
        },
        "titleFormatted": {
          "en": "Does [[device]] have headroom for [[required_kw]] kW?"
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "title": {
              "en": "Device"
            }
          },
          {
            "name": "required_kw",
            "type": "number",
            "title": {
              "en": "Required power (kW)"
            },
            "min": 0,
            "step": 0.1
          }
        ],
        "hint": {
          "en": "Checks if the current headroom plus the device's estimated usage is enough to add the requested load."
        },
        "id": "has_headroom_for_device"
      },
      {
        "title": {
          "en": "Operating mode is..."
        },
        "titleFormatted": {
          "en": "Operating mode is [[mode]]"
        },
        "args": [
          {
            "name": "mode",
            "type": "autocomplete",
            "title": {
              "en": "Mode"
            },
            "placeholder": {
              "en": "Choose a mode"
            },
            "example": {
              "en": "Home"
            }
          }
        ],
        "hint": {
          "en": "Use this to create flows that only run when PELS is in a specific mode (e.g., Home, Away, Night)."
        },
        "id": "is_capacity_mode"
      },
      {
        "title": {
          "en": "Price level is..."
        },
        "titleFormatted": {
          "en": "Price level is [[level]]"
        },
        "args": [
          {
            "name": "level",
            "type": "autocomplete",
            "title": {
              "en": "Price level"
            },
            "placeholder": {
              "en": "Choose a price level"
            },
            "example": {
              "en": "Cheap"
            }
          }
        ],
        "id": "price_level_is"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Disable capacity control for device"
        },
        "titleFormatted": {
          "en": "Disable capacity control for [[device]]"
        },
        "hint": {
          "en": "Keep PELS from shedding or restoring this device while capacity control is disabled."
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "title": {
              "en": "Device"
            },
            "placeholder": {
              "en": "Select device"
            }
          }
        ],
        "id": "disable_device_capacity_control"
      },
      {
        "title": {
          "en": "Enable capacity control for device"
        },
        "titleFormatted": {
          "en": "Enable capacity control for [[device]]"
        },
        "hint": {
          "en": "Allow PELS to shed or restore this device based on capacity limits."
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "title": {
              "en": "Device"
            },
            "placeholder": {
              "en": "Select device"
            }
          }
        ],
        "id": "enable_device_capacity_control"
      },
      {
        "title": {
          "en": "Report power usage"
        },
        "titleFormatted": {
          "en": "Report power [[power]] W"
        },
        "hint": {
          "en": "Feed instantaneous power (W) from a meter to track hourly energy usage and feed capacity guard."
        },
        "args": [
          {
            "name": "power",
            "type": "number",
            "title": {
              "en": "Power (W)"
            },
            "min": 0,
            "step": 1
          }
        ],
        "id": "report_power_usage"
      },
      {
        "title": {
          "en": "Set capacity limit"
        },
        "titleFormatted": {
          "en": "Set capacity limit to [[limit_kw]] kW"
        },
        "hint": {
          "en": "Use this to dynamically adjust your power limit based on time of day, electricity prices, or other conditions."
        },
        "args": [
          {
            "name": "limit_kw",
            "type": "number",
            "title": {
              "en": "Limit (kW)"
            },
            "min": 0.1,
            "step": 0.1
          }
        ],
        "id": "set_capacity_limit"
      },
      {
        "title": {
          "en": "Set operating mode"
        },
        "titleFormatted": {
          "en": "Set operating mode to [[mode]]"
        },
        "args": [
          {
            "name": "mode",
            "type": "autocomplete",
            "title": {
              "en": "Mode (e.g. home, away, vacation)"
            },
            "placeholder": {
              "en": "Choose a mode"
            },
            "example": {
              "en": "Home"
            }
          }
        ],
        "hint": {
          "en": "Use this to automatically switch PELS modes based on time, presence, or other triggers in your flows."
        },
        "id": "set_capacity_mode"
      },
      {
        "title": {
          "en": "Set daily budget"
        },
        "titleFormatted": {
          "en": "Set daily budget to [[budget_kwh]] kWh"
        },
        "hint": {
          "en": "Use this to adjust your daily energy budget from flows. Set to 0 to disable the daily budget."
        },
        "args": [
          {
            "name": "budget_kwh",
            "type": "number",
            "title": {
              "en": "Budget (kWh)"
            },
            "min": 0,
            "max": 360,
            "step": 0.1
          }
        ],
        "id": "set_daily_budget_kwh"
      },
      {
        "title": {
          "en": "Set expected power for device"
        },
        "titleFormatted": {
          "en": "Set expected power for [[device]] to [[power_w]] W"
        },
        "hint": {
          "en": "Override a device's expected power usage until it reports a new meter reading. Fails if the device already has load configured in settings."
        },
        "args": [
          {
            "name": "device",
            "type": "autocomplete",
            "title": {
              "en": "Device"
            },
            "placeholder": {
              "en": "Select device"
            }
          },
          {
            "name": "power_w",
            "type": "number",
            "title": {
              "en": "Expected power (W)"
            },
            "min": 1,
            "step": 1
          }
        ],
        "id": "set_expected_power_usage"
      }
    ]
  },

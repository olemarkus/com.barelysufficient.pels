{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.barelysufficient.pels",
  "version": "1.0.0",
  "compatibility": ">=12.4.0",
  "sdk": 3,
  "platforms": [
    "local"
  ],
  "name": {
    "en": "PELS"
  },
  "description": {
    "en": "Price and capacity controlled energy storage system"
  },
  "brandColor": "#7fd1ae",
  "category": [
    "energy"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Ole Markus With",
    "email": "olemarkus@gmail.com"
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Capacity guard: manual action needed"
        },
        "titleFormatted": {
          "en": "Capacity guard cannot reduce load to the limit; manual action required"
        },
        "args": [],
        "id": "capacity_shortfall"
      }
    ],
    "conditions": [
      {
        "title": {
          "en": "Is there enough capacity?"
        },
        "titleFormatted": {
          "en": "Is there enough capacity for [[required_kw]] kW?"
        },
        "args": [
          {
            "name": "required_kw",
            "type": "number",
            "title": {
              "en": "Required power (kW)"
            },
            "min": 0,
            "step": 0.1
          }
        ],
        "id": "has_capacity_for"
      },
      {
        "title": {
          "en": "Capacity headroom band"
        },
        "titleFormatted": {
          "en": "Capacity headroom is [[band]]"
        },
        "args": [
          {
            "name": "band",
            "type": "dropdown",
            "title": {
              "en": "Band"
            },
            "values": [
              {
                "id": "HIGH",
                "title": {
                  "en": "High"
                }
              },
              {
                "id": "MEDIUM",
                "title": {
                  "en": "Medium"
                }
              },
              {
                "id": "LOW",
                "title": {
                  "en": "Low"
                }
              }
            ]
          }
        ],
        "id": "headroom_band"
      },
      {
        "title": {
          "en": "Capacity mode is..."
        },
        "titleFormatted": {
          "en": "Capacity mode is [[mode]]"
        },
        "args": [
          {
            "name": "mode",
            "type": "autocomplete",
            "title": {
              "en": "Mode"
            },
            "placeholder": {
              "en": "Choose a mode"
            },
            "example": {
              "en": "Home"
            }
          }
        ],
        "id": "is_capacity_mode"
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Report power usage"
        },
        "titleFormatted": {
          "en": "Report power [[power]] W (feeds guard + hourly usage)"
        },
        "hint": {
          "en": "Feed instantaneous power (W) from a meter to track hourly energy usage."
        },
        "args": [
          {
            "name": "power",
            "type": "number",
            "title": {
              "en": "Power (W)"
            },
            "min": 0,
            "step": 1
          }
        ],
        "id": "report_power_usage"
      },
      {
        "title": {
          "en": "Set capacity limit"
        },
        "titleFormatted": {
          "en": "Set capacity limit to [[limit_kw]] kW"
        },
        "hint": {
          "en": "Set the max allowed power (kW) for the capacity guard."
        },
        "args": [
          {
            "name": "limit_kw",
            "type": "number",
            "title": {
              "en": "Limit (kW)"
            },
            "min": 0.1,
            "step": 0.1
          }
        ],
        "id": "set_capacity_limit"
      },
      {
        "title": {
          "en": "Set capacity mode"
        },
        "titleFormatted": {
          "en": "Set capacity mode to [[mode]]"
        },
        "args": [
          {
            "name": "mode",
            "type": "autocomplete",
            "title": {
              "en": "Mode (e.g. home, away, vacation)"
            },
            "placeholder": {
              "en": "Choose a mode"
            },
            "example": {
              "en": "Home"
            }
          }
        ],
        "id": "set_capacity_mode"
      }
    ]
  },
  "drivers": [
    {
      "id": "mode_indicator",
      "name": {
        "en": "Capacity mode"
      },
      "class": "sensor",
      "capabilities": [
        "mode_indicator",
        "alarm_generic"
      ],
      "capabilitiesOptions": {
        "alarm_generic": {
          "title": {
            "en": "Capacity shortfall"
          }
        }
      },
      "icon": "/assets/icon.svg",
      "images": {
        "small": "/drivers/mode_indicator/assets/images/small.png",
        "large": "/drivers/mode_indicator/assets/images/large.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "capabilities": {
    "mode_indicator": {
      "title": {
        "en": "Capacity mode"
      },
      "desc": {
        "en": "Shows the current capacity mode selected in settings or Flow."
      },
      "type": "string",
      "getable": true,
      "setable": false
    }
  }
}
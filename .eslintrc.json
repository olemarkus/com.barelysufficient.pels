{
  "extends": "athom/homey-app",
  "ignorePatterns": ["jest.config.*.cjs", "settings/**", "drivers/**/*.js", "test/screenshots/**"],
  "rules": {
    "node/no-unsupported-features/node-builtins": ["error", { "version": ">=18.0.0" }],
    "node/no-unsupported-features/es-syntax": ["error", { "version": ">=18.0.0", "ignores": ["modules"] }]
  },
  "overrides": [
    {
      "files": ["test/**/*.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-floating-promises": "off",
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "node/no-missing-import": "off",
        "node/no-missing-require": "off",
        "node/no-unpublished-import": "off",
        "node/no-unsupported-features/es-syntax": "off",
        "max-classes-per-file": "off",
        "no-useless-constructor": "off",
        "no-empty-function": "off",
        "no-useless-return": "off",
        "no-use-before-define": "off",
        "no-loop-func": "off",
        "prefer-destructuring": "off",
        "prefer-const": "warn",
        "no-multi-spaces": "warn",
        "radix": "warn",
        "global-require": "off",
        "homey-app/global-timers": "off"
      }
    }
  ]
}
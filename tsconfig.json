{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "outDir": ".homeybuild/",
    "isolatedModules": true
  },
  "include": [
    "app.ts",
    "capacityGuard.ts",
    "httpClient.ts",
    "powerTracker.ts",
    "priceOptimizer.ts",
    "priceService.ts",
    "settingsHandlers.ts",
    "drivers/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".homeybuild",
    "settings/**"
  ]
}

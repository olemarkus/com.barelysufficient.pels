{
  "name": "com.barelysufficient.pels",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && npm run build:tokens && npm run build:settings",
    "build:tokens": "style-dictionary build --config style-dictionary.config.mjs",
    "build:settings": "esbuild settings/src/script.ts --bundle --outfile=settings/script.js --format=iife --target=es2020 --minify",
    "watch:settings": "esbuild settings/src/script.ts --bundle --outfile=settings/script.js --format=iife --target=es2020 --watch",
    "start": "npm run build:settings && homey app run",
    "install-app": "npm run build:settings && homey app install",
    "lint": "eslint .",
    "test": "jest --testPathIgnorePatterns=settings-ui && npm run validate",
    "test:ui": "npm run build:tokens && jest --config jest.config.ui.cjs",
    "test:all": "npm run test:ui && npm test",
    "validate": "npm run build:settings && homey app validate",
    "check": "npm run test:ui && npm test",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --max-warnings=0",
      "bash -c 'tsc --noEmit'"
    ]
  },
  "dependencies": {
    "homey-api": "^3.14.21",
    "sortablejs": "^1.15.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tsconfig/node16": "^16.1.8",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/puppeteer": "^7.0.4",
    "@types/sortablejs": "^1.15.9",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "puppeteer": "^24.31.0",
    "style-dictionary": "^5.1.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}

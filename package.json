{
  "name": "com.barelysufficient.pels",
  "version": "1.1.1",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "npm run ensure:resvg-arm64 && tsc && npm run build:tokens && npm run build:settings",
    "build:tokens": "style-dictionary build --config style-dictionary.config.mjs",
    "build:settings": "esbuild settings/src/script.ts --bundle --outfile=settings/script.js --format=iife --target=es2020 --minify",
    "watch:settings": "esbuild settings/src/script.ts --bundle --outfile=settings/script.js --format=iife --target=es2020 --watch",
    "start": "npm run build:settings && homey app run",
    "install-app": "npm run ensure:resvg-arm64 && npm run build:settings && homey app install",
    "lint": "eslint .",
    "lint:css": "stylelint \"**/*.css\" --max-warnings=0",
    "lint:html": "html-validate \"settings/**/*.html\" --max-warnings=0",
    "test:unit": "jest --config jest.config.fast.cjs",
    "test:unit:ci": "jest --config jest.config.cjs",
    "test:unit:tz": "node scripts/run-timezone-tests.mjs",
    "ci": "npm run build && npm run lint:css && npm run lint:html && npm run test:unit:ci && npm run test:unit:tz && npm run test:ui && npm run lint",
    "test": "npm run ci",
    "test:e2e": "playwright test",
    "test:ui": "npm run build:tokens && jest --config jest.config.ui.cjs",
    "test:all": "npm run ci",
    "validate": "npm run build:settings && homey app validate",
    "check": "npm run ci",
    "ensure:resvg-arm64": "node scripts/ensure-resvg-arm64.mjs",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --max-warnings=0",
      "bash -c 'tsc --noEmit'"
    ],
    "**/*.css": [
      "stylelint --max-warnings=0"
    ],
    "**/*.html": [
      "html-validate --max-warnings=0"
    ]
  },
  "overrides": {
    "parseuri": "3.0.2"
  },
  "dependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "homey-api": "^3.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@tsconfig/node22": "^22.0.5",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/puppeteer": "^7.0.4",
    "@types/sortablejs": "^1.15.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-sonarjs": "^3.0.5",
    "globals": "^17.0.0",
    "html-validate": "^10.7.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "puppeteer": "^24.35.0",
    "sortablejs": "^1.15.6",
    "style-dictionary": "^5.1.4",
    "stylelint": "^17.2.0",
    "stylelint-config-recommended": "^18.0.0",
    "tippy.js": "^6.3.7",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
